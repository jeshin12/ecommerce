<section class="">
	<!-- single product slide -->
	<div class="single-product-slider">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-6 text-center">
					<div class="section-title">
						<h5>Summer Essentials</h5>
						<h1><span style="font-size: larger; font-weight: 900; "><strong>CHASE THE DAY</strong></span>
							<h6>Move. Explore. Bring your boldest. Get after summer’s endless possibilities with
								ready-for- anything fits</h6>


					</div>
				</div>

			</div>


			<ul class="nav nav-tabs justify-content-center mb-55" id="myTab" role="tablist">
				<li class="nav-item" role="presentation">
					<button style="color: #ff6f00" class="nav-link active" id="home-tab" data-bs-toggle="tab"
						data-bs-target="#home" type="button" role="tab" aria-selected="true">All FASHION</button><br>

				</li>

				{{#each categories}}
				<form method="POST" action="/filter-product">
					<li class="nav-item" role="presentation">
						<input type="hidden" name="name" value="{{this.name}}">
						<button style="color: #ff6f00" class="nav-link active" id="profile-tab" type="submit" role="tab"
							aria-selected="true">{{this.name}}</button>

					</li>
				</form>

				{{/each}}

			</ul>
			<h2>Featured</h2>







			<div class="row">

				<!-- single product -->
				{{#each products}}
				<div class="col-lg-3 col-md-6">

					<div class="single-product ">

						<a href="/product-detail?id={{this._id}}"><img class="img-fluid"
								src="/product-pictures/{{this.image.[0]}}" alt=""></a>
						<div class="product-details">
							<h3 style="color: #ff6f00;">{{this.name}}</h3>
